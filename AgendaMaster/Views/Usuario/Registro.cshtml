@model AgendaMaster.Entidades.Usuario
@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
    ViewBag.Title = "Registro de Usuario";
}

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Proyectos</title>

    <link href="~/root/dist/css/fullcalendar.min.css" rel="stylesheet" />
    <!--
    <!--  http://www.tooplate.com/view/2108-dashboard -->

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600">
    <!-- https://fonts.google.com/specimen/Open+Sans -->
    <link href="~/root/dist/css/fontawesome.min.css" rel="stylesheet" />
    <!-- https://fontawesome.com/ -->
    <link href="~/root/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- https://getbootstrap.com/ -->
    <link href="~/root/dist/css/tooplate.css" rel="stylesheet" />

</head>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">


<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Registrarse</p>

                                <!-- empieza el form-->
                                @using (Html.BeginForm("Registro", "Usuario"))
                                {
                                    <!-- Cedula-->
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            @Html.TextBoxFor(A => A.Cedula, new { @type = "cedula", @class = "form-control", @placeholder = "Ingrese su cedula" })
                                        </div>
                                    </div>
                                    <!-- Nombre-->
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-heart fa-lg me-3 fa-fw"></i>
                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            @Html.TextBoxFor(A => A.Nombre, new { @type = "nombre", @class = "form-control", @placeholder = "Ingrese su Nombre" })

                                        </div>
                                    </div>
                                    <!-- Apellidos-->
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-star fa-lg me-3 fa-fw"></i>
                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            @Html.TextBoxFor(A => A.Apellidos, new { @type = "apellidos", @class = "form-control", @placeholder = "Ingrese sus apellidos" })

                                        </div>
                                    </div>
                                    <!-- Email-->
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            @Html.TextBoxFor(A => A.Email, new { @type = "email", @class = "form-control", @placeholder = "Ingrese su Correo" })
                                        </div>
                                    </div>
                                    <!-- Rol-->
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-cog fa-lg me-3 fa-fw"></i>
                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            @Html.TextBoxFor(A => A.Rol, new { @type = "rol", @class = "form-control", @placeholder = "Ingrese su Rol" })
                                        </div>
                                    </div>
                                    <!-- Contrasenna-->
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            @Html.TextBoxFor(A => A.Contrasenna, new { @type = "password", @class = "form-control", @placeholder = "Ingrese su Contrasena" })
                                        </div>
                                    </div>


                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg">Registrarse</button>
                                    </div>
    
                                    <!--Redirigir a Inciar Session-->
                                    <a href="@Url.Action("IniciarSesion","Usuario")" class="text-center">Iniciar Sesión</a>

                                }

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">

                                
                            </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>