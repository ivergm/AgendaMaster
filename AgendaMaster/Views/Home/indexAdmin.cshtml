    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #000;
        }

            .navbar .navbar-brand,
            .navbar .nav-link {
                color: #fff;
            }

        .banner {
            background-color: #000;
            color: #fff;
            padding: 20px;
            text-align: center;
